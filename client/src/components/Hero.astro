<style>
    .hero {
        background-image: url("../assets/fondopan.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 85vh; 
        color: #ebf7f1;
        text-align: center;
        padding: 4rem 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-family: "Montserrat", sans-serif;
        position: relative; /* Asegura que el pseudo-elemento ::before esté posicionado correctamente */
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.575); /* Ajusta la opacidad según sea necesario */
        pointer-events: none; /* Permite la interacción con el contenido */
        z-index: 1; /* Asegura que el pseudo-elemento esté encima */
    }

    .hero h2 {
        margin: 0 0 1rem 0;
        font-size: 2.2em; 
        font-weight: bold; 
    }

    .hero p {
        margin: 0 0 1rem 0;
        font-size: 1.5em; 
        font-weight: normal; 
    }

    /* Animación de desvanecimiento para el fondo */
    .fade-background {
        transition: background-image 1s ease-in-out;
    }
