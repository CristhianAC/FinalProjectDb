        .fade-background {
        transition: background-image 1s ease-in-out;

    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        transition: opacity 1s ease-in-out;
    }

    @keyframes fadeBackgroundAnimation {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }
</style>

<script>
    import baguettes from "../assets/baguettes.jpg";
    import fondopan from "../assets/fondopan.jpg";
    import donuts from "../assets/donuts.jpg";

    const images = [baguettes, fondopan, donuts];
    let currentIndex = 0;

    function changeBackgroundImage() {
        const heroElement = document.querySelector('.hero');
        if (heroElement) {
            // Añade la clase para la animación
            const heroElement = document.querySelector('.hero') as HTMLElement;
            heroElement.classList.add('fade-background');

            // Cambia la imagen de fondo
            heroElement.style.backgroundImage = `url('${images[currentIndex].src}')`;
            
            // Actualiza el índice para la siguiente imagen
            currentIndex = (currentIndex + 1) % images.length;
        }
    }

    setInterval(changeBackgroundImage, 5000);
</script>

