---
import { SignIn } from "auth-astro/components";
---

<div id="sign-up-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="form-container">
      <p class="title">Crear Cuenta</p>
      <form id="sign-up-form" class="form">
        <input
          type="text"
          class="input"
          placeholder="Nombre"
          name="name"
          required
        />
        <input
          type="email"
          class="input"
          placeholder="Email"
          name="email"
          required
        />
        <input
          type="password"
          class="input"
          placeholder="Password"
          name="password"
          required
        />
        <button onclick="" type="submit" class="form-btn">Crear Cuenta</button>
      </form>
      <div class="buttons-container">
        <SignIn provider="google" class="login-button google-login-button">
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            version="1.1"
            x="0px"
            y="0px"
            class="google-icon"
            viewBox="0 0 48 48"
            height="1em"
            width="1em"
            xmlns="http://www.w3.org/2000/svg"
          >
